{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noLib": false,
    "jsx": "react",
    "outDir": "lib",
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "static",
    "typings/browser.d.ts",
    "typings/browser",
    "__tests__",
    "lib",
    "umd"
  ]
}
