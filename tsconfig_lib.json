{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noLib": false,
    "jsx": "react",
    "outDir": "lib_es6",
    "rootDir": "src"
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "!node_modules/rxjs",
    "static",
    "typings/browser.d.ts",
    "typings/browser",
    "__tests__",
    "lib",
    "umd",
    "mocks"
  ]
}
